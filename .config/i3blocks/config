separator_block_width=14

[disk-root]
label=:
command=/usr/lib/i3blocks/disk /
interval=30
color=#1793D1


[disk-home]
label=:
command=/usr/lib/i3blocks/disk $HOME
interval=30
color=#859900

[upgrades]
label=📦
command=aptitude search '~U' | wc -l
color=#d33682
interval=1800

[ncmpcpp]
label=🎶
command=ncmpcpp --current-song="%a - %n - %t (%b)"
interval=1
color=#859900

[coronavirus-cases]
label=😷
command=rona-counter 4
interval=3600
color=#b58900

[coronavirus-deaths]
label=💀
command=rona-counter 6
interval=3600
color=#6c71c4

[date]
label=📆
command=date '+%A %d·%m·%Y'
interval=5
color=#d70a53

[time]
label=🕕
command=date '+%I:%M:%S %p'
interval=1
color=#50C878

